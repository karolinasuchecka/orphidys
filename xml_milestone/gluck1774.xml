    <front>
      <titlePage>
        <docAuthor>Christoph Willibald Gluck, Ranieri de Calzabigi</docAuthor>
        <docTitle>
          <titlePart type="main">Orphée et Eurydice</titlePart>
          <titlePart type="sub">Tragédie-opéra en trois actes</titlePart>
        </docTitle>
      </titlePage>
      <castList>
        <castItem xml:id="orphee">Orphée (Alto ou Ténor)</castItem>
        <castItem xml:id="eurydice">Eurydice (Soprano)</castItem>
        <castItem xml:id="amour">L’amour (Soprano)</castItem>
        <castItem xml:id="chœur">Chœur</castItem>
        <castItem xml:id="pasteurs_nymphes">Pasteurs et Nymphes</castItem>
        <castItem xml:id="furies">Furies</castItem>
